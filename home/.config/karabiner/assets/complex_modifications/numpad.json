{
  "title": "Numpad",
  "rules": [
    {
      "description": "Right option + 123QWEASD as Number pad",
      "manipulators": [
        {
          "from": {
            "key_code": "right_command"
          },
          "to": [
            {
              "set_variable": {
                "name": "numeric_keypad_mode",
                "value": 1
              }
            },
            {
              "key_code": "out"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "numeric_keypad_mode",
                "value": 0
              }
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_option"
          },
